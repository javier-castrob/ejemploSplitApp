<mvc:View xmlns:core="sap.ui.core" controllerName="EjemploSplitApp.EjemploSplitApp.controller.Main" xmlns:mvc="sap.ui.core.mvc" displayBlock="true" xmlns="sap.m">
    <Page id="page" title="{i18n>master}">        
        <content>
            <List id="orders" 
                    items="{Productos>/Productos/}"
                    mode="SingleSelectMaster"
                    selectionChange="onSelectionChange">
                <items>
                    <StandardListItem title="{Productos>producto}" 
                        type="Active"
                        press="onSelectionChange"
                        />
                </items>
		    </List>
        </content>
    </Page>
</mvc:View>
